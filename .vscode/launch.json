  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--lib",
          "--package=naming-conventions-wasm"
        ],
        "filter": {
          "name": "naming-conventions-wasm",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug integration test 'web'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--test=web",
          "--package=naming-conventions-wasm"
        ],
        "filter": {
          "name": "web",
          "kind": "test"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
